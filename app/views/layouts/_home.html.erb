<section id="home">
    <div class="container">
			<table class="table">
				<%@posts = Post.all %>
				<% unless  @posts.nil? || @posts.empty?  %>
					<% @posts.each do |p|%>
					<tr>
						<td>
							<h1 class="text-center"><%= p.title %></h1>
							<i><h5 class="text-center"><%= l p.created_at, format: :long %></h5></i>
							<p class="text-justify">	
									<%= simple_format(p.description)  %>								
							</p>
							<small>
								<i> publicado por <%= p.user %></i>
							</small>													
						</td>	
					</tr>
					<tr>
						<td>
							<% unless p.url_image.blank? %>
								<%= image_tag  "#{ p.url_image}", :width => "#{p.size_image}%" %><br>							
							<% end %>
							<% unless p.key_youtube.blank? %>							
								<iframe width="100%" height="400"
									src=<%="https://www.youtube.com/embed/#{p.key_youtube}"%>>
								</iframe>
							<% end %>
						</td>												
					</tr>

				<% end %>
				<% else %>
					<tr>
						<td colspan="2" class="text-center">
							Nenhuma not√≠cia foi postada.
						</td>
					</tr>			
				<% end %>
			</table>
	
		</div>
</section>
