<%= simple_form_for(@post) do |f| %>
	<%= f.hidden_field :user_id %>	
	<div class="row">
		<div class="col-lg-12">
			<%= f.input :title %>    			
	  </div>
	</div>
	<div class="row">
		<div class="col-lg-12">
    	<%= f.input :description, input_html: { cols: 50, rows: 10 } %>
		</div>
	</div>		
	<div class="row">
	  <div class="col-lg-2">
		  <%= f.input :url_image %>		  
		</div>	
	  <div class="col-lg-2">
	    <%= f.input :size_image %>
		</div>	
  </div>
	<div class="row">
		<div class="col-lg-4">
			<%= f.input :key_youtube, placeholder: 'https://www.youtube.com/watch?v=' %>     
	 	</div>
		<div class="col-lg-2">	
	  	<%= f.input :size_video %>  
		</div>
	</div>
  <div class="form-actions">
		<hr>
    <%= f.button :submit, class:'btn btn-success' %>
		<%= link_to "Voltar", posts_path, class: "btn btn-default"%>
  </div>
<% end %>
