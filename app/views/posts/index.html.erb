<h4>Listagem de Posts</h4>

<table class='table'>
  <thead>
    <tr>
      <th>Título</th>
      <th>Descrição</th>
      <th>Url da Imagem</th>
      <th>Tamanho da Imagem</th>
      <th>Chave youtube</th>
      <th>Tamanho do video</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.url_image %></td>
        <td><%= post.size_image %></td>
        <td><%= post.key_youtube %></td>
        <td><%= post.size_video %></td>
        <td><%= link_to 'Exibir', post, class:'btn btn-info' %></td>
        <td><%= link_to 'Editar', edit_post_path(post), class:'btn btn-info'  %></td>
        <td><%= link_to 'Apagar', post, method: :delete, data: { confirm: 'Tem certeza?' }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Post', new_post_path, class:'btn btn-success' %>
